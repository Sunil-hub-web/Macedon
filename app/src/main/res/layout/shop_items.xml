<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred_fifty"
        android:layout_margin="@dimen/five"
        app:cardCornerRadius="@dimen/eight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred"
                android:padding="@dimen/ten">

                <ImageView
                    android:id="@+id/itemimage"
                    android:layout_width="@dimen/ninety"
                    android:layout_height="@dimen/ninety"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/shop_a"
                    android:padding="@dimen/three"/>

                <ImageView
                    android:layout_width="@dimen/twenty"
                    android:layout_height="@dimen/twenty"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/radio_veg"
                    android:padding="@dimen/three"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/itemimage"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Optimum Nutrition Gold Standard WHEY"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/fifteen"
                        android:layout_toLeftOf="@+id/favourite"
                        android:layout_marginRight="@dimen/five"
                        android:fontFamily="@font/raleway"/>


                    <ToggleButton
                        android:id="@+id/favourite"
                        android:layout_width="@dimen/twenty"
                        android:layout_height="@dimen/twenty"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_toggle"
                        android:textColor="@color/transparent"/>

                    <RatingBar
                        android:id="@+id/foodratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/itemname"
                        style="?android:attr/ratingBarStyleSmall"
                        android:backgroundTint="@color/colorGrey"
                        android:progressTint="@color/colorPrimaryDark" />


                    <LinearLayout
                        android:id="@+id/pricelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/salesprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Rs. 3,499.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fifteen"
                            android:layout_toLeftOf="@+id/favourite"
                            android:layout_marginRight="@dimen/five"
                            android:fontFamily="@font/sans_bold"/>

                        <TextView
                            android:id="@+id/regularprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Rs. 3,499.00"
                            android:textColor="@color/colorGrey2"
                            android:textSize="@dimen/fifteen"
                            android:layout_toLeftOf="@+id/favourite"
                            android:layout_marginRight="@dimen/ten"
                            android:fontFamily="@font/sans_regular"/>

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="12% OFF"
                            android:textColor="@color/btn_yellow"
                            android:textSize="@dimen/twelve"
                            android:layout_toLeftOf="@+id/favourite"
                            android:fontFamily="@font/raleway"/>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textcol" />


            <RelativeLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:text="Premium Member Price\nRs.3394.00"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawablePadding="@dimen/ten"
                    android:textSize="@dimen/ten"
                    android:drawableLeft="@drawable/ic_premium_badge"
                    android:fontFamily="@font/raleway"/>


                <LinearLayout
                    android:layout_width="@dimen/hundred_fifty"
                    android:layout_height="@dimen/forty"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shop_icon_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/twenty"
                        android:layout_height="@dimen/twenty"
                        android:src="@drawable/ic_shop"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:fontFamily="@font/raleway"
                        android:text="QUICK BUY"
                        android:textColor="@color/white"
                        android:textSize="@dimen/thirteen" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
