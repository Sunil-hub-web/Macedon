<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/fifteen"
        app:cardElevation="@dimen/five"
        android:layout_margin="@dimen/fifteen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/membership_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/homecard_back1"
                android:layout_margin="@dimen/ten">

                <TextView
                    android:id="@+id/packageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/sans_bold"
                    android:text=""
                    android:layout_margin="@dimen/ten"
                    android:gravity="center"
                    android:textColor="@color/colorGrey2"
                    android:textSize="@dimen/edittextsize"/>


            </LinearLayout>

            <TextView
                android:id="@+id/priceDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/sans_bold"
                android:text=""
                android:layout_margin="@dimen/ten"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/sans_bold"
                android:text="Unlimited profile view"
                android:layout_margin="@dimen/ten"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten">

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="@dimen/twenty_five"
                    android:layout_height="@dimen/twenty_five"
                    android:src="@drawable/checked"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_centerVertical="true">
                </ImageView>

                <TextView
                    android:id="@+id/packagedurtion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_toRightOf="@+id/imageview"
                    android:fontFamily="@font/sans_bold"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten">

                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_width="@dimen/twenty_five"
                    android:layout_height="@dimen/twenty_five"
                    android:src="@drawable/checked"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_centerVertical="true">
                </ImageView>

                <TextView
                    android:id="@+id/packageprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_toRightOf="@+id/imageview1"
                    android:fontFamily="@font/sans_bold"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize" />

            </RelativeLayout>

            <TextView
                android:id="@+id/messageDet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/sans_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize"
                android:layout_margin="@dimen/ten">

            </TextView>

            <TextView
                android:id="@+id/btn_UpdateAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_bg"
                android:fontFamily="@font/sans_bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/twenty"
                android:text="Buy Now"
                android:textColor="@color/black"
                android:textSize="@dimen/edittextsize"
                android:padding="@dimen/fifteen"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/twenty"
                android:layout_marginRight="@dimen/ten"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>