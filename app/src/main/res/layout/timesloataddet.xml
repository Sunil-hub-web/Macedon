<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/ten"
        android:layout_marginStart="@dimen/five"
        android:layout_marginTop="@dimen/five"
        android:layout_marginEnd="@dimen/five"
        android:layout_marginBottom="@dimen/five"
        android:elevation="@dimen/four"
        android:id="@+id/cardView_Center">

        <LinearLayout
            android:layout_width="@dimen/hundred_twenty"
            android:layout_height="wrap_content"
            android:background="@drawable/homecard_back1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_Category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred"
                android:background="@drawable/selection_drawable"
                android:scaleType="fitXY"
                android:src="@drawable/fitness">

            </ImageView>

            <TextView
                android:id="@+id/centerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginBottom="@dimen/five"
                android:fontFamily="@font/sans_bold"
                android:text="Fashion"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve_size">

            </TextView>

            <Button
                android:id="@+id/timesolatDet"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/thirty"
                android:background="@drawable/background_gradient"
                android:text="Time Solat"
                android:padding="@dimen/three"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="@dimen/twelve_size"
                android:layout_marginBottom="@dimen/seven">

            </Button>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>