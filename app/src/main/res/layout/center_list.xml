<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/three_hundred"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/homecard_back1"
        android:layout_margin="@dimen/five"
        android:elevation="@dimen/five">

        <ImageView
            android:id="@+id/img_Category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_eighty"
            android:src="@drawable/fitness"
            android:scaleType="fitXY"
            android:background="@drawable/selection_drawable">

        </ImageView>

        <TextView
            android:id="@+id/centerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fashion"
            android:fontFamily="@font/sans_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten">

        </TextView>

        <TextView
            android:id="@+id/centerLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fashion"
            android:fontFamily="@font/sans_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize"
            android:drawableLeft="@drawable/location_on"
            android:drawablePadding="@dimen/ten"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginBottom="@dimen/ten">

        </TextView>

    </LinearLayout>

</RelativeLayout>