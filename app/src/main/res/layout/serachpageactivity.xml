<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/ten"
        android:elevation="@dimen/four"
        android:layout_margin="@dimen/ten"
        android:id="@+id/cardViewDet">

        <RelativeLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/autocomplate_bg"
            android:elevation="@dimen/ten">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hundred"
                app:cardCornerRadius="@dimen/fifteen"
                android:id="@+id/cardView_image"
                android:layout_centerVertical="true"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/img_Category"
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/hundred"
                    android:scaleType="fitXY" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/centerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginTop="@dimen/ten"
                android:layout_toRightOf="@id/cardView_image"
                android:layout_toLeftOf="@+id/star_rel"
                android:fontFamily="@font/sans_bold"
                android:text="BBRoyal"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/centerLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/centerName"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginTop="@dimen/seven"
                android:layout_toRightOf="@id/cardView_image"
                android:text="Bhubanesware,Sahidi nagar"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve"
                android:textStyle="bold"
                android:fontFamily="@font/rupee_foradian"/>

            <TextView
                android:id="@+id/centerActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/centerLoc"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginTop="@dimen/five"
                android:layout_toRightOf="@id/cardView_image"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"
                android:fontFamily="@font/rupee_foradian"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centerActivity"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ten">

                <TextView
                    android:id="@+id/loc_Distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginBottom="@dimen/five"
                    android:text="Distance  \n 12 Km"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/twelve_size"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/rupee_foradian"/>

                <!-- <TextView
                     android:id="@+id/show_Ditance"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_toRightOf="@+id/loc_Distance"
                     android:layout_marginLeft="@dimen/ten"
                     android:layout_marginTop="@dimen/five"
                     android:text="12 Km"
                     android:textColor="@color/colorAccent"
                     android:textSize="@dimen/twelve_size"
                     android:textStyle="bold"
                     android:fontFamily="@font/rupee_foradian"
                     />-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/five"
                android:background="@drawable/autocomplate_bg"
                android:padding="@dimen/five"
                android:id="@+id/star_rel">

                <ImageView
                    android:id="@+id/star_image"
                    android:layout_width="@dimen/fifteen"
                    android:layout_height="@dimen/fifteen"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/star_Name"
                    android:src="@drawable/star">

                </ImageView>

                <TextView
                    android:id="@+id/star_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.4"
                    android:layout_marginRight="@dimen/five"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"
                    android:fontFamily="@font/rupee_foradian"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>