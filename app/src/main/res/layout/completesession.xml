<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred"
        app:cardCornerRadius="@dimen/eight"
        app:cardElevation="@dimen/five"
        android:layout_margin="@dimen/ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="@dimen/ten">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/sans_bold"
                    android:hint="Date"
                    android:textColor="@color/colorGrey2"
                    android:textSize="@dimen/edittextsize"
                    android:layout_below="@+id/radiogroup"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/sans_bold"
                    android:hint="Time"
                    android:textColor="@color/colorGrey2"
                    android:textSize="@dimen/edittextsize"
                    android:layout_below="@+id/radiogroup"/>

            </LinearLayout>

            <TextView
                android:id="@+id/gymName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/sans_bold"
                android:hint="Gym Name"
                android:layout_margin="@dimen/ten"
                android:textColor="@color/colorGrey2"
                android:textSize="@dimen/edittextsize"
                android:layout_below="@+id/radiogroup"/>

            <TextView
                android:id="@+id/gymLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/sans_bold"
                android:hint="Gym Location"
                android:layout_margin="@dimen/ten"
                android:textColor="@color/colorGrey2"
                android:textSize="@dimen/edittextsize"
                android:layout_below="@+id/radiogroup"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="@dimen/ten">

                <TextView
                    android:id="@+id/inTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/sans_bold"
                    android:hint="In Time"
                    android:textColor="@color/colorGrey2"
                    android:textSize="@dimen/edittextsize"
                    android:layout_below="@+id/radiogroup"/>

                <TextView
                    android:id="@+id/outTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/sans_bold"
                    android:hint="Out Time"
                    android:textColor="@color/colorGrey2"
                    android:textSize="@dimen/edittextsize"
                    android:layout_below="@+id/radiogroup"/>

            </LinearLayout>

        </LinearLayout>





    </androidx.cardview.widget.CardView>

</RelativeLayout>