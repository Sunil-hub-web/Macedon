<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five"
        app:cardCornerRadius="@dimen/eight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ten">

                <ImageView
                    android:id="@+id/itemimage"
                    android:layout_width="@dimen/ninety"
                    android:layout_height="@dimen/ninety"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/three"
                    android:src="@drawable/shop_a" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/itemimage"
                    android:layout_marginLeft="@dimen/six"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="@dimen/five"
                        android:fontFamily="@font/raleway"
                        android:gravity="center_vertical"
                        android:text="Optimum Nutrition Gold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen" />


                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/itemname"
                        android:fontFamily="@font/raleway"
                        android:gravity="center_vertical"
                        android:text="Optimum Nutrition Gold Standard WHEY"
                        android:textColor="@color/colorGrey2"
                        android:textSize="@dimen/twelve" />


                    <RelativeLayout
                        android:id="@+id/pricelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/address"
                        android:layout_marginTop="@dimen/five"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="@dimen/ten"
                            android:drawableLeft="@drawable/ic_gym_icon"
                            android:drawablePadding="@dimen/six"
                            android:fontFamily="@font/sans_regular"
                            android:text="05:30 AM - 09:00 PM"
                            android:textColor="@color/colorGrey2"
                            android:textSize="@dimen/fifteen" />

                        <TextView
                            android:layout_width="@dimen/ninety"
                            android:layout_height="@dimen/twenty_five"
                            android:layout_below="@+id/time"
                            android:layout_marginTop="@dimen/five"
                            android:background="@drawable/box"
                            android:fontFamily="@font/raleway"
                            android:gravity="center"
                            android:text="View Details"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/nine" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty"
                android:background="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/fifteen"
                        android:layout_height="@dimen/fifteen"
                        android:src="@drawable/online_icon"/>

                    <TextView
                        android:id="@+id/active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/ten"
                        android:fontFamily="@font/raleway"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/eight"
                        android:text="Active"
                        android:textColor="@color/white"
                        android:textSize="@dimen/thirteen" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/favourite"
                        android:layout_width="@dimen/twenty"
                        android:layout_height="@dimen/twenty"
                        android:background="@drawable/trainer_toggle"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:id="@+id/addtofavourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:fontFamily="@font/raleway"
                        android:gravity="center_vertical"
                        android:text="Add to Favourite"
                        android:textColor="@color/white"
                        android:textSize="@dimen/thirteen" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
